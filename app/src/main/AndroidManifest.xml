<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.elnardu.glass2">
    <uses-permission
        android:name="com.google.android.glass.permission.DEVELOPMENT" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.glass.permission.CAMERA" />
    <uses-feature android:name="com.google.android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EmbeddedCardLayoutActivity"
            android:icon="@drawable/ic_glass_logo"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>

            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/voice_trigger" />
        </activity>

        <!--<activity android:name=".EmbeddedCardLayoutActivity"-->
            <!--android:exported="true"-->
            <!--/>-->

    </application>

</manifest>